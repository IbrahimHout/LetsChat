<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_display_imageview"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/def_avatar_startwars"

        />

    <TextView
        android:text="this is sample text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_toEndOf="@id/user_display_imageview"
        android:id="@+id/user_display_name_tv"

        android:gravity="center"
        android:layout_alignBottom="@id/user_display_imageview"
        android:layout_alignTop="@id/user_display_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/add_btn_userrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_display_imageview"
        android:layout_alignBottom="@id/user_display_imageview"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"

        android:text="@string/add"
        android:background="@drawable/emptybutton"
        android:textColor="#000"
        />
</RelativeLayout>